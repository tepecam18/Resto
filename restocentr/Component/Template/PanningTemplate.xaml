<UserControl 
    Name="userControl"
    x:Class="restocentr.Component.Template.PanningTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:restocentr.Component.Template"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="40">
        <Button MinWidth="100" MinHeight="100" Background="Red" Click="Button_Click">
            <Grid>
                <TextBlock Text="sa"/>
                <ContentPresenter Content="{Binding AdditionalContent, ElementName=userControl}"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
